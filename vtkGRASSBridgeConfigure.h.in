#ifndef VTK_GRASS_BRIDGE_BUILD_SHARED_LIBS
#define VTK_GRASS_BRIDGE_STATIC
#endif

#if defined(_MSC_VER) && !defined(VTK_GRASS_BRIDGE_STATIC)
